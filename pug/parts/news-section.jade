section#news.row
  
  include to-top-btn

  header.section-title
    h1 News
    div
      a(href="http://scalar-conf.com/news.html")
        small All news


  div.small-12.medium-4.large-4.columns

    div.news-post(id= news[0].permalink)
    
      header.post-header
        h1 #{news[0].title}
        time.post-date #{news[0].dateFormated}

      div.post-summary!= news[0].excerpt

      div.social

        a(href="https://twitter.com/share", class="twitter-share-button", data-url="http://scalar-conf.com/news/#{news[0].permalink}.html", data-text="#{news[0].title}", data-via="scalarconf", data-related="scalarconf", data-count="none", data-hashtags="scalarconf") Tweet

        div.fb-like(data-href="http://scalar-conf.com/news/#{news[0].permalink}.html", data-width="225", data-layout="button", data-action="like", data-show-faces="false", data-share="false")

      a.read-more.button(href="http://scalar-conf.com/news/#{news[0].permalink}.html") read more



  div.small-12.medium-4.large-4.columns

    div.news-post(id= news[1].permalink)
    
      header.post-header
        h1 #{news[1].title}
        time.post-date #{news[1].dateFormated}

      div.post-summary!= news[1].excerpt

      div.social

        a(href="https://twitter.com/share", class="twitter-share-button", data-url="http://scalar-conf.com/news/#{news[1].permalink}.html", data-text="#{news[1].title}", data-via="scalarconf", data-related="scalarconf", data-count="none", data-hashtags="scalarconf") Tweet

        div.fb-like(data-href="http://scalar-conf.com/news/#{news[1].permalink}.html", data-width="225", data-layout="button", data-action="like", data-show-faces="false", data-share="false")

      a.read-more.button(href="http://scalar-conf.com/news/#{news[1].permalink}.html") read more

  

  div.twitter-widget.small-12.medium-4.large-4.columns
    a.twitter-timeline(href='https://twitter.com/scalarconf', width="700", data-widget-id='423429614577278976', data-chrome='noheader nofooter noborders transparent', data-link-color="#9becf4", data-tweet-limit='2', data-related="conference,Scala")