extends layout.jade

block content

  section.news-posts.row
    
    header.section-title
      h1 #{locals.title}
      time.post-date #{locals.dateFormated}

    div.small-12.medium-8.medium-centered.large-6.large-centered.columns!= locals.body

    div.social

      a(href="https://twitter.com/share", class="twitter-share-button", data-url="http://scalar-conf.com/news/#{locals.permalink}.html", data-text="#{locals.title}", data-via="scalarconf", data-related="scalarconf", data-count="none", data-hashtags="scalarconf") Tweet

      div.fb-like(data-href="http://scalar-conf.com/news/#{locals.permalink}.html", data-width="225", data-layout="button", data-action="like", data-show-faces="false", data-share="false")